    <!--    <input class="user-form-email" type="email" name="user[email]" placeholder="email" maxlength="100" required>-->
    <div class="user-form-header">Profile</div>
    <input class="user-form-image" type="text" name="profilePicture" placeholder="URL">
    <div class="user-form-header">Username</div>
        <input class="user-form-username" type="text" name="username" placeholder="Username" minlength="3" maxlength="30" required>
