<% include ../partials/header %>

<div class="post-form-page-header">Edit Post</div>
<form class="post-form" action="/posts/<%=post._id%>?_method=PUT" method="POST">
    <div class="post-form-header">Title</div>
        <input class="post-form-title" type="text" name="post[title]" value="<%= post.title %>" maxlength="200" required>
    <div class="post-form-header">Image</div>
        <input class="post-form-image" type="text" name="post[image]" value="<%= post.image %>" required>
    <div class="post-form-header">Text</div>
        <textarea class="post-form-body" type="text" name="post[body]" placeholder="Detailed description goes here (optional)." rows="10" maxlength="600"><%= post.body %></textarea>
    <input class="post-form-submit" type="submit">
</form>
<form class="post-delete" action="/posts/<%=post._id%>?_method=DELETE" method="POST">
        <button class="post-form-delete" onclick="return confirm('Are you sure you want to delete this post?');">Delete</button>
    </form>

<% include ../partials/footer %>